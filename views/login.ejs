<%- include('partials/header') %>

<div class="container extra-container">
    <div class="title-word">
      <h1>Login</h1>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-6 col-sm-6">
        <div class="card">
          <div class="card-body">

            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <div class="btn-container">
                <button type="submit" class="btn btn-dark btn-lg">Login</button>
              </div>
            </form>
            <div class="account-check">
              <p>Don't have an account? <a href="/register">Sign Up</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-4 col-sm-4 mt-5">
        <a class="btn btn-block btn-lg btn-social btn-google" href="/auth/google" role="button">
          <i class="fab fa-google"></i>
          Sign In with Google
        </a>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-4 col-sm-4 mt-5">
        <a class="btn btn-block btn-lg btn-social btn-facebook" href="/auth/facebook" role="button">
          <i class="fab fa-facebook"></i>
          Sign In with Facebook
        </a>
      </div>
    </div>

  </div>

<%- include('partials/footer') %>
